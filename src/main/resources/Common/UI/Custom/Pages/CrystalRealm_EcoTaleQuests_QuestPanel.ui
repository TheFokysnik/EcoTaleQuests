$C = "../Common.ui";

@GoldTitle = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 18,
  TextColor: #ffaa00,
  RenderBold: true,
  HorizontalAlignment: Center
);

@White = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #ffffff
);

@Gray = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 12,
  TextColor: #aaaaaa
);

@SmGray = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 11,
  TextColor: #aaaaaa
);

@Value = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #55ff55,
  RenderBold: true
);

@Gold = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #ffaa00,
  RenderBold: true
);

@Reward = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #ffd700,
  RenderBold: true
);

@Error = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #ff4444,
  RenderBold: true
);

@Success = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #55ff55,
  RenderBold: true
);

@Progress = LabelStyle(
  ...$C.@DefaultLabelStyle,
